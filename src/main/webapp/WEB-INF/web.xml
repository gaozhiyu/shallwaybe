<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
	    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	     http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	    version="2.5">

  <display-name>Spring MVC Web Application</display-name>
	
	  <!-- Welcome page -->
  	<welcome-file-list>
    	<welcome-file>index.jsp</welcome-file>
  	</welcome-file-list>
  	
  	
  	  
    <!-- url-pattern中配置的/coreServlet用于指定该Servlet的访问路径 -->  
    <servlet-mapping>  
        <servlet-name>coreServlet</servlet-name>  
        <url-pattern>/unauthenticate/*</url-pattern>  
    </servlet-mapping>  
        <servlet-mapping>  
        <servlet-name>coreServlet</servlet-name>  
        <url-pattern>/authenticate/*</url-pattern>  
    </servlet-mapping> 
     
    <servlet-mapping>  
        <servlet-name>fileUploadServlet</servlet-name>  
        <url-pattern>/fileupload</url-pattern>  
    </servlet-mapping>     
    <servlet-mapping>  
        <servlet-name>fileDownloadServlet</servlet-name>  
        <url-pattern>/filedownload</url-pattern>  
    </servlet-mapping>   
  
  
    <servlet>  
        <servlet-name>coreServlet</servlet-name>  
        <servlet-class>  
            com.william.CoreServlet  
        </servlet-class>  
    </servlet>
    
    <servlet>  
        <servlet-name>fileUploadServlet</servlet-name>  
        <servlet-class>  
            com.william.FileUploadServlet  
        </servlet-class>  
    </servlet>
    
    <servlet>  
        <servlet-name>fileDownloadServlet</servlet-name>  
        <servlet-class>  
            com.william.FileDownloadServlet  
        </servlet-class>  
    </servlet>    
    
    <filter>
	    <filter-name>LoginFilter</filter-name>
	    <filter-class>com.william.filter.AuthenticationFilter</filter-class>
	</filter>

	<filter-mapping>
	    <filter-name>LoginFilter</filter-name>
	    <url-pattern>/*</url-pattern>
	</filter-mapping>  
	

	<listener>
		<listener-class>com.william.listener.ContextListener</listener-class>
	</listener>

</web-app>