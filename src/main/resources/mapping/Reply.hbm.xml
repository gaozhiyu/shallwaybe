<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.william.entity.ReplyEntity" table="reply" catalog="shallway">
        <id name="id" type="string" >
            <column name="ID" length="64" not-null="true" unique="true" />
        </id>
        
        <property name="shallWayID" type="string">
            <column name="ShallWayID" length="64" />
        </property>
        <property name="authorIntID" type="string">
            <column name="AuthorIntID" length="64" />
        </property>             
        <property name="authorNickname" type="string">
            <column name="AuthorNickname" length="32" />
        </property>
        <property name="replierIntID" type="string">
            <column name="ReplierIntID" length="64" />
        </property>             
        <property name="replierNickname" type="string">
            <column name="ReplierNickname" length="32" />
        </property>           
        <property name="replyTime" type="java.util.Date">
            <column name="ReplyTime" />
        </property> 
        <property name="replyContents" type="string">
            <column name="ReplyContents"/>
        </property>               

    </class>
</hibernate-mapping>
